<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    tools:context=".Faculty.FacultyDetails">

    <ProgressBar
        android:id="@+id/facultyProgressbarDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:indeterminateDrawable="@drawable/custom_progressbar"
        android:padding="130dp"
        android:elevation="10dp"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:paddingTop="40dp"
            android:paddingBottom="10dp"
            android:text="Fill Required Details\n(Faculty Panel)"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/enterFacultyFD"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/corner_with_10"
            android:hint="Enter your name"
            android:paddingLeft="10dp"
            android:textColor="@color/light_green"
            android:textColorHint="@color/light_green"
            android:textCursorDrawable="@drawable/black_cursor" />

        <EditText
            android:id="@+id/enterFacultyRoleSC"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/corner_with_10"
            android:hint="Enter your faculty id"
            android:paddingLeft="10dp"
            android:textColor="@color/light_green"
            android:textColorHint="@color/light_green"
            android:textCursorDrawable="@drawable/black_cursor" />

        <EditText
            android:id="@+id/enterFacultyPinSC"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/corner_with_10"
            android:hint="Create your security pin"
            android:inputType="number"
            android:maxLength="4"
            android:paddingLeft="10dp"
            android:textColor="@color/light_green"
            android:textColorHint="@color/light_green"
            android:textCursorDrawable="@drawable/black_cursor" />


        <Button
            android:id="@+id/submitFacultyBtnSC"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/corner_with_10"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/light_green"
            android:textSize="20dp" />

    </LinearLayout>
</RelativeLayout>
