<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    tools:context=".Student.SelectCourse">

    <ProgressBar
        android:id="@+id/selectCourseProgressbarSC"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        android:indeterminateDrawable="@drawable/custom_progressbar"
        android:padding="130dp"
        android:visibility="gone" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="40dp"
                android:paddingBottom="10dp"
                android:text="Fill Required Details"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/enterNameSC"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/corner_with_10"
                android:hint="Enter your name"
                android:paddingLeft="10dp"
                android:textColor="@color/light_green"
                android:textColorHint="@color/light_green"
                android:textCursorDrawable="@drawable/black_cursor" />

            <EditText
                android:id="@+id/enterRoleSC"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/corner_with_10"
                android:hint="Enter your role number"
                android:paddingLeft="10dp"
                android:textColor="@color/light_green"
                android:textColorHint="@color/light_green"
                android:textCursorDrawable="@drawable/black_cursor" />

            <EditText
                android:id="@+id/enterPinSC"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/corner_with_10"
                android:hint="Create your security pin"
                android:inputType="number"
                android:maxLength="4"
                android:paddingLeft="10dp"
                android:textColor="@color/light_green"
                android:textColorHint="@color/light_green"
                android:textCursorDrawable="@drawable/black_cursor" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="30dp"
                android:text="Session*"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/sessionSpinnerSC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="30dp"
                android:text="Course*"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/courseSpinnerSC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp" />

            <TextView
                android:id="@+id/branchTextSC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="30dp"
                android:text="Branch*"
                android:textStyle="bold"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/branchSpinnerSC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/submitBtnSC"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="80dp"
                android:background="@drawable/corner_with_10"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/light_green"
                android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
